@page "/metinput"
@inherits MetInputPage

<RadzenCard Variant="Variant.Outlined" Style="max-width:1200px;margin:auto;">
    <RadzenPanel>
        <HeaderTemplate>
            <RadzenText Text="DAILY CONCENTRATOR MET INPUT" TextStyle="TextStyle.H3" />
        </HeaderTemplate>
        <ChildContent>
            <RadzenRow>
                <RadzenColumn Width="12">
                    <RadzenText Text=@($"FOR {SelectedDate:dd-MMM-yyyy}") TextStyle="TextStyle.H5" />
                    <RadzenButton Text="Select Date" Style="margin-left:20px;" Click="ShowDateDialog" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow Style="margin-top:20px;">
                <RadzenColumn Width="2"><RadzenText Text="" /></RadzenColumn>
                <RadzenColumn Width="2"><RadzenText Text="RMF H2O" /></RadzenColumn>
                <RadzenColumn Width="2"><RadzenText Text="RMF MAG FE" /></RadzenColumn>
                <RadzenColumn Width="2"><RadzenText Text="DAILY FLOT DT RECOV." /></RadzenColumn>
                <RadzenColumn Width="2"><RadzenText Text="DAILY FLOT DT SIO2" /></RadzenColumn>
                <RadzenColumn Width="1"><RadzenText Text="-3/4" /></RadzenColumn>
                <RadzenColumn Width="1"><RadzenText Text="RMF DAVIS TUBE SIO2" /></RadzenColumn>
            </RadzenRow>
            <RadzenRow>
                <RadzenColumn Width="2"><RadzenText Text="STEP 2" /></RadzenColumn>
                @for (int i = 0; i < 6; i++)
                {
                    <RadzenColumn Width="2">
                        <RadzenTextBox Style="width:100%;" />
                    </RadzenColumn>
                }
            </RadzenRow>
            <RadzenRow>
                <RadzenColumn Width="2"><RadzenText Text="STEP 3" /></RadzenColumn>
                @for (int i = 0; i < 6; i++)
                {
                    <RadzenColumn Width="2">
                        <RadzenTextBox Style="width:100%;" />
                    </RadzenColumn>
                }
            </RadzenRow>
            <RadzenRow Style="margin-top:30px;">
                <RadzenColumn Width="6">
                    <RadzenCard Variant="Variant.Outlined">
                        <RadzenText Text="STEP 2 -1/2" TextStyle="TextStyle.H6" />
                        <RadzenRow>
                            <RadzenColumn Width="2"><RadzenText Text="1-" /></RadzenColumn>
                            <RadzenColumn Width="10"><RadzenTextBox Style="width:100%;margin-bottom:10px;" /></RadzenColumn>
                        </RadzenRow>
                        <RadzenRow>
                            <RadzenColumn Width="2"><RadzenText Text="2-" /></RadzenColumn>
                            <RadzenColumn Width="10"><RadzenTextBox Style="width:100%;margin-bottom:10px;" /></RadzenColumn>
                        </RadzenRow>
                        <RadzenRow>
                            <RadzenColumn Width="2"><RadzenText Text="3-" /></RadzenColumn>
                            <RadzenColumn Width="10"><RadzenTextBox Style="width:100%;margin-bottom:10px;" /></RadzenColumn>
                        </RadzenRow>
                    </RadzenCard>
                </RadzenColumn>
                <RadzenColumn Width="6">
                    <RadzenCard Variant="Variant.Outlined">
                        <RadzenText Text="STEP 3 -1/2" TextStyle="TextStyle.H6" />
                        <RadzenRow>
                            <RadzenColumn Width="2"><RadzenText Text="1-" /></RadzenColumn>
                            <RadzenColumn Width="10"><RadzenTextBox Style="width:100%;margin-bottom:10px;" /></RadzenColumn>
                        </RadzenRow>
                        <RadzenRow>
                            <RadzenColumn Width="2"><RadzenText Text="2-" /></RadzenColumn>
                            <RadzenColumn Width="10"><RadzenTextBox Style="width:100%;margin-bottom:10px;" /></RadzenColumn>
                        </RadzenRow>
                        <RadzenRow>
                            <RadzenColumn Width="2"><RadzenText Text="3-" /></RadzenColumn>
                            <RadzenColumn Width="10"><RadzenTextBox Style="width:100%;margin-bottom:10px;" /></RadzenColumn>
                        </RadzenRow>
                    </RadzenCard>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow Style="margin-top:30px;">
                <RadzenColumn Width="12" Style="text-align:right;">
                    <RadzenButton Text="Ok to Transmit" ButtonStyle="ButtonStyle.Primary" Click="ShowTransmitDialog" />
                </RadzenColumn>
            </RadzenRow>
        </ChildContent>
    </RadzenPanel>
</RadzenCard>


