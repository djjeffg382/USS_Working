@page "/lab_tumblrs"
@rendermode InteractiveServer
@* @attribute [Authorize(Roles = "Admin,BSC_Admin,M_OM_ADMIN,M_OM_COOR,M_OM_MET,M_OM_MGR,M_LAB_4TH")]
 *@
@inject NotificationService notificationService

<PageTitle>@Util.PROGRAM_TITLE - Tumbles</PageTitle>
<SectionContent SectionName="page-title">Tumbles Entry</SectionContent>

<style type="text/css">
    /*  RadzenNumeric internal styles must be in the .razor file */
    .tumblr-table .rz-numeric {
        height: 22px !important;
    }

    .tumblr-table .rz-numeric-input {
        height: 22px !important;
        font-size: 9pt !important;
        text-align: right !important;
        padding: 0 3px !important;
        /* Make inputs wider */
        width: 70px !important;
        min-width: 60px !important;
        box-sizing: border-box !important;
    }

    /* Lock icon for authorized lines */
    .lock-icon {
        margin-left: 6px;
        color: #c62828;
        font-size: 10pt;
        vertical-align: middle;
    }

    /* ── Tumblrs Entry Form Styles (copied from Tumbles.razor.css to ensure they're applied)
       Putting these styles inline in the component guarantees they are present even if
       CSS isolation isn't picked up by the build/dev server. */

    .tumblr-table {
        border-collapse: collapse;
        font-size: 10pt;
    }

        .tumblr-table td,
        .tumblr-table th {
            border: 1px solid #888;
            padding: 2px 4px;
            vertical-align: middle;
        }

    /* Column/row header cells */
    .label-col {
        width: 90px;
    }

    .line-header {
        background-color: #D1DDF1;
        color: black;
        font-weight: bold;
        text-align: center;
        min-width: 110px;
    }

    .sub-header {
        background-color: #e0e0e0;
        color: black;
        font-weight: bold;
        text-align: center;
        width: 70px;
    }

    .row-label {
        font-weight: bold;
        background-color: #f5f5f5;
        white-space: nowrap;
        padding: 2px 8px;
    }

    /* Editable entry cells (green background applied via inline style to reach RadzenNumeric input) */
    .entry-cell {
        padding: 1px;
        text-align: center;
    }

    /* Calculated/read-only cells (yellow) */
    .calc-cell {
        background-color: #FFFF99;
        color: black;
        text-align: right;
        font-weight: bold;
        padding: 2px 6px;
    }

    /* Italicised note row above -28M */
    .calc-separator-note {
        font-style: italic;
        font-size: 9pt;
        color: #555;
        padding: 2px 8px;
        background-color: #f5f5f5;
        border-left: none;
        border-right: none;
    }

    /* Read-only indicator shown after M_LAB_4TH saves a record */
    .read-only-indicator {
        color: #c62828;
        font-size: 9pt;
        margin-left: 8px;
    }

    /* Actions row cell (Clear button + Defaults checkbox) */
    .actions-cell {
        text-align: center;
        padding: 2px 4px;
        white-space: nowrap;
    }

    /* Label next to the Defaults Used checkbox */
    .defaults-label {
        font-size: 9pt;
        margin-left: 2px;
        vertical-align: middle;
    }
</style>

<RadzenCard class="m-2" style="width:fit-content">

    <!-- Header: Date / Shift / Half navigation -->
    <div class="row mb-3 align-items-center g-2">
        <div class="col-auto d-flex align-items-center gap-1">
            <strong>DATE:</strong>
            <RadzenButton Icon="chevron_left" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Click="PrevDate" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))" />
            <RadzenDatePicker @bind-Value="SelectedDate" DateFormat="MM/dd/yy" Change="LoadData" Style="width:115px" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))" />
            <RadzenButton Icon="chevron_right" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Click="NextDate" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))" />
        </div>
        <div class="col-auto d-flex align-items-center gap-1">
            <strong>SHIFT:</strong>
            <RadzenButton Icon="chevron_left" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Click="PrevShift" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))" />
            <RadzenSelectBar TValue="int" Size="ButtonSize.Small" @bind-Value="SelectedShift" Change="LoadData" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))">
                <Items>
                    <RadzenSelectBarItem Value="1" Text="1" />
                    <RadzenSelectBarItem Value="2" Text="2" />
                    <RadzenSelectBarItem Value="3" Text="3" />
                </Items>
            </RadzenSelectBar>
            <RadzenButton Icon="chevron_right" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Click="NextShift" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))" />
        </div>
        <div class="col-auto d-flex align-items-center gap-1">
            <strong>HALF:</strong>
            <RadzenButton Icon="chevron_left" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Click="PrevHalf" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))" />
            <RadzenSelectBar TValue="int" Size="ButtonSize.Small" @bind-Value="SelectedHalf" Change="LoadData" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))">
                <Items>
                    <RadzenSelectBarItem Value="1" Text="1" />
                    <RadzenSelectBarItem Value="2" Text="2" />
                </Items>
            </RadzenSelectBar>
            <RadzenButton Icon="chevron_right" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Click="NextHalf" Disabled="@(IsLabAnalyst || (IsReadOnly && !IsOmCoordinator))" />
        </div>
        <div class="col-auto d-flex align-items-center gap-1">
            <RadzenButton Text="Save" Icon="save" ButtonStyle="ButtonStyle.Primary" Click="SaveData" Disabled="@IsReadOnly" />
            @if (IsOmCoordinator)
            {
                <RadzenButton Text="Save && Authorize" Icon="verified" ButtonStyle="ButtonStyle.Success" Click="SaveAndAuthorizeData" Disabled="@IsReadOnly" />
            }
            @if (IsReadOnly)
            {
                <span class="read-only-indicator">&#x1F512; Read-only after Authorized</span>
            }
        </div>
    </div>

    <!-- Entry table -->
    <table class="tumblr-table">
        <thead>
            <tr>
                <th class="label-col"></th>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    <th colspan="2" class="line-header">
                        LINE @ln
                        @if (Lines.ContainsKey(ln) && Lines[ln].IsAuthorized)
                        {
                            <span class="lock-icon" title="Authorized">&#x1F512;</span>
                        }
                    </th>
                }
            </tr>
            <tr>
                <th class="label-col"></th>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    <th class="sub-header">BT</th>
                    <th class="sub-header">AT</th>
                }
            </tr>
        </thead>
        <tbody>
            <!-- Actions row: Clear (OM Coordinator) + Defaults Used checkbox -->
            <tr>
                <td class="row-label">Actions</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    int line = ln;
                    <td colspan="2" class="actions-cell">
                        @if (IsOmCoordinator)
                        {
                            <RadzenButton Text="Clear" Icon="clear" Size="ButtonSize.ExtraSmall"
                                          ButtonStyle="ButtonStyle.Danger" Variant="Variant.Outlined"
                                          Click="@(() => ClearLine(line))" Disabled="@(IsReadOnly || Lines[line].IsAuthorized)" />
                        }
                        <RadzenCheckBox TValue="bool" Value="@Lines[line].DefaultsUsed"
                                        Change="@(async (v) => await DefaultsUsedChanged(line, v))"
                                        Disabled="@(IsReadOnly || Lines[line].IsAuthorized)" />
                        <span class="defaults-label">Defaults</span>
                    </td>
                }
            </tr>
            <!-- TOT WT -->
            <tr>
                <td class="row-label">TOT WT</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    int line = ln;
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].TotWt"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 0)" />
                    </td>
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].TotWt_AT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 1)" />
                    </td>
                }
            </tr>
            <!-- +9/16 -->
            <tr>
                <td class="row-label">+9/16</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    int line = ln;
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh916_BT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 2)" />
                    </td>
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh916_AT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 3)" />
                    </td>
                }
            </tr>
            <!-- +1/2 -->
            <tr>
                <td class="row-label">+1/2</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    int line = ln;
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh12_BT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 4)" />
                    </td>
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh12_AT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 5)" />
                    </td>
                }
            </tr>
            <!-- +7/16 -->
            <tr>
                <td class="row-label">+7/16</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    int line = ln;
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh716_BT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 6)" />
                    </td>
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh716_AT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 7)" />
                    </td>
                }
            </tr>
            <!-- +3/8 -->
            <tr>
                <td class="row-label">+3/8</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    int line = ln;
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh38_BT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 8)" />
                    </td>
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh38_AT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 9)" />
                    </td>
                }
            </tr>
            <!-- +1/4 -->
            <tr>
                <td class="row-label">+1/4</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    int line = ln;
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh14_BT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 10)" />
                    </td>
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh14_AT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 11)" />
                    </td>
                }
            </tr>
            <!-- +28M -->
            <tr>
                <td class="row-label">+28M</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    int line = ln;
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh28M_BT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 12)" />
                    </td>
                    <td class="entry-cell">
                        <RadzenNumeric ShowUpDown="false" TValue="decimal?" @bind-Value="Lines[line].Mesh28M_AT"
                                       Change="@(() => Recalc(line))" Format="N0" Disabled="@(IsReadOnly || Lines[line].DefaultsUsed || Lines[line].IsAuthorized)"
                                       tabindex="@GetTabIndex(line, 13)" />
                    </td>
                }
            </tr>
            <!-- Separator note -->
            <tr>
                <td colspan="11" class="calc-separator-note">minus 28 mesh numbers are calculated</td>
            </tr>
            <!-- -28M (calculated, yellow) -->
            <tr>
                <td class="row-label">-28M</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    <td class="calc-cell">@Lines[ln].Minus28M_BT?.ToString("N0")</td>
                    <td class="calc-cell">@Lines[ln].Minus28M_AT?.ToString("N0")</td>
                }
            </tr>
            <!-- CUM+1/4 (calculated, yellow) -->
            <tr>
                <td class="row-label">CUM+1/4<br /><span style="font-size:8pt">4-hr cum.</span></td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    <td colspan="2" class="calc-cell" style="text-align:center">@Lines[ln].Cum14Display</td>
                }
            </tr>
            <!-- PEL TONS (read-only, from Agg shift data) -->
            <tr>
                <td class="row-label">PEL TONS</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    <td colspan="2" class="calc-cell" style="text-align:center">@Lines[ln].PelTons?.ToString("N2")</td>
                }
            </tr>
            <!-- GRATE HRS (read-only, from Agg shift data) -->
            <tr>
                <td class="row-label">GRATE HRS</td>
                @for (int ln = 3; ln <= 7; ln++)
                {
                    <td colspan="2" class="calc-cell" style="text-align:center">@Lines[ln].GrateHrs?.ToString("N2")</td>
                }
            </tr>
        </tbody>
    </table>

</RadzenCard>
